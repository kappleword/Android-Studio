<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".HomeFragment">

    <Button
        android:id="@+id/btn_homeSchedule"
        android:background="@drawable/scheduleicon"
        android:layout_width="150dp"
        android:layout_height="150dp">
    </Button>
    <TextView
        android:layout_below="@id/btn_homeSchedule"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간표"
        android:textSize="25sp"
        android:gravity="center"/>
    <Button
        android:id="@+id/btn_homeCourse"
        android:layout_marginLeft="50dp"
        android:background="@drawable/courseicon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toRightOf="@id/btn_homeSchedule"/>
    <TextView
        android:layout_below="@id/btn_homeSchedule"
        android:layout_marginLeft="227dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강좌목록"
        android:textSize="25sp"
        android:gravity="center"/>
    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btn_homePage"
        android:background="@drawable/cityicon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/btn_homeSchedule"/>
    <TextView
        android:layout_below="@id/btn_homePage"
        android:layout_marginLeft="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대학 홈페이지"
        android:textSize="25sp"
        android:gravity="center"/>
    <Button
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/btn_daum"
        android:background="@drawable/searchicon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/btn_homeSchedule"
        android:layout_toRightOf="@id/btn_homePage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_daum"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="-2dp"
        android:gravity="center"
        android:text="포털 사이트"
        android:textSize="25sp" />
</RelativeLayout>